<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Ingrese su Nombre" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="¿De que Estado nos visitas?" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="236dp"
                        android:layout_height="34dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:autoText="true"
                android:text="             ¿Le gusto el recorrido?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="94dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton

                        android:id="@+id/Radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="67dp"
                        android:layout_weight="1"
                        android:text="Exelente" />

                    <RadioButton
                        android:id="@+id/Radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="67dp"
                        android:layout_weight="1"
                        android:text="Bueno" />

                    <RadioButton
                        android:id="@+id/Radio3"
                        android:layout_width="103dp"
                        android:layout_height="67dp"
                        android:layout_weight="1"
                        android:text="Regular" />

                    <RadioButton
                        android:id="@+id/Radio4"
                        android:layout_width="wrap_content"
                        android:layout_height="67dp"
                        android:layout_weight="1"
                        android:text="Malo" />

                </LinearLayout>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="            ¿Cómo calificaría las explicaciones del guía?" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="108dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Exelente" />

                        <RadioButton
                            android:id="@+id/radioButton7"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:text="Bueno" />

                        <RadioButton
                            android:id="@+id/radioButton6"
                            android:layout_width="103dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:text="Regular" />

                        <RadioButton
                            android:id="@+id/radioButton5"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:text="Malo" />
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="             ¿Recomendarías nuestros recorridos? " />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Si" />

                        <RadioButton
                            android:id="@+id/radioButton10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />

                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="              ¿Le agradaron los atractivos visitados?" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton14"
                            android:layout_width="120dp"
                            android:layout_height="72dp"
                            android:layout_weight="1"
                            android:text="Exelente" />

                        <RadioButton
                            android:id="@+id/radioButton13"
                            android:layout_width="100dp"
                            android:layout_height="71dp"
                            android:layout_weight="1"
                            android:text="Bueno" />

                        <RadioButton
                            android:id="@+id/radioButton12"
                            android:layout_width="114dp"
                            android:layout_height="71dp"
                            android:layout_weight="1"
                            android:text="Regular" />

                        <RadioButton
                            android:id="@+id/radioButton11"
                            android:layout_width="83dp"
                            android:layout_height="71dp"
                            android:layout_weight="1"
                            android:text="Malo" />
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="              ¿ En general toda la organización del recorrido?" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton18"
                            android:layout_width="135dp"
                            android:layout_height="58dp"
                            android:layout_weight="1"
                            android:text="Exelente" />

                        <RadioButton
                            android:id="@+id/radioButton17"
                            android:layout_width="109dp"
                            android:layout_height="58dp"
                            android:layout_weight="1"
                            android:text="Bueno" />

                        <RadioButton
                            android:id="@+id/radioButton16"
                            android:layout_width="115dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Regular" />

                        <RadioButton
                            android:id="@+id/radioButton15"
                            android:layout_width="83dp"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:text="Malo" />
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:text="Aceptar" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Atras" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>