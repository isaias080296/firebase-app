<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00EE0A0A"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="362dp"
        android:layout_height="259dp"
        android:scaleType="fitXY"
        android:src="@drawable/vitorina6" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="347dp"
        android:layout_height="37dp"
        android:autoText="true"
        android:background="#FFFFFF"
        android:text=" ¿Recomendarías nuestros recorridos?"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#131212"
        android:textSize="18sp" />



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00C853">

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="738dp"
            android:layout_toRightOf="@+id/button13"
            android:background="#EC407A"
            android:cursorVisible="false"
            android:drawableTop="@drawable/love"
            android:layoutDirection="rtl"
            android:textDirection="inherit"
            android:textSize="30sp" />


        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="750dp"
            android:layout_toRightOf="@+id/button14"
            android:background="#5C6BC0"
            android:drawableTop="@drawable/happy"
            android:layoutDirection="rtl" />


        <Button
            android:id="@+id/button15"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/button15"
            android:background="#AB47BC"
            android:drawableTop="@drawable/confused"
            android:layoutDirection="rtl" />


        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/button13"
            android:background="#FFEB3B"
            android:drawableTop="@drawable/lululu"
            android:layoutDirection="rtl" />
    </TableRow>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />


</LinearLayout>