<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00EE0A0A"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:background="#FAF4F4"


            android:drawableTop="@drawable/back"
            android:scrollbarStyle="outsideInset"
            android:text=""
            android:textAlignment="viewStart"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button17"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:layout_width="319dp"
            android:layout_height="104dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/survey"
            android:text="Encuesta del  Servicio"
            android:textColor="#DF0404"
            android:textSize="18sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:background="#00F8EDED"
        android:scaleType="fitXY"
        android:src="@drawable/vitorina1" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">


    </TableRow>

    <Button
        android:id="@+id/button8"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"

        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:accessibilityLiveRegion="assertive"
        android:clickable="false"
        android:cursorVisible="false"
        android:drawableTop="@drawable/mexican"
        android:drawingCacheQuality="high"
        android:fontFamily="cursive" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="49dp">


        <TextView
            android:id="@+id/textView5"
            style="@android:style/Widget.Holo.Light.TextView"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="¿De donde nos visitán?"
            android:textAllCaps="false"
            android:textColor="#090808"
            android:textDirection="firstStrongRtl"
            android:textIsSelectable="true"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="210dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:id="@+id/textView6"
            style="@android:style/Widget.Holo.Light.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="¿Cuantos personas te acompañan?"
            android:textAllCaps="false"
            android:textColor="#090808"
            android:textDirection="firstStrongRtl"
            android:textIsSelectable="true"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </TableRow>

    <Button
        android:id="@+id/button18"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:drawableEnd="@drawable/sf"
        android:text="Selecciona un emoji en la encuesta  a realizar conforme a tú  opinión de la pregunta"
        android:textColor="#DF0404"
        android:textSize="10sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:background="#D50000">


        <Button
            android:id="@+id/button4"
            android:layout_width="377dp"
            android:layout_height="121dp"
            android:background="#D50000"
            android:text="Presiona aqui para Continuar"
            android:textColor="#F7F3F3"
            android:textColorHint="#00FAFAFA"
            android:textSize="30sp" />

    </TableRow>



</LinearLayout>